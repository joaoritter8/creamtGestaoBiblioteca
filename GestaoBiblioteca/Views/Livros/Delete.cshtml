@model TesteBiblioteca.Models.Livro

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar este livro?</h3>
<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           ISBN
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LivroISBN)
        </dd>
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LivroTitulo)
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.PessoaID)
        </dd>
        <dt class = "col-sm-2">
            Editora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LivroEditora)
        </dd>
        <dt class = "col-sm-2">
            Edição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LivroEdicao)
        </dd>
        <dt class = "col-sm-2">
            Ano
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LivroAno)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CatID)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LivroStatus)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LivroID" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
